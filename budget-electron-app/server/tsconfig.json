{
  // TypeScript configuration for Express server
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Output directory for compiled JavaScript
    "outDir": "../dist-server",
    
    // Use CommonJS for Node.js compatibility
    "module": "CommonJS",
    
    // Target modern Node.js
    "target": "ES2020",
    
    // Enable all strict type-checking options
    "strict": true,
    
    // Allow default imports from modules with no default export
    "esModuleInterop": true,
    
    // Skip type checking of declaration files for faster compilation
    "skipLibCheck": true,
    
    // Ensure consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    
    // Allow importing JSON files
    "resolveJsonModule": true,
    
    // Module resolution strategy
    "moduleResolution": "node",
    
    // Include type definitions
    "types": ["node"],
    
    // Source map generation for debugging
    "sourceMap": true,
    
    // Emit declaration files
    "declaration": false,
    
    // Don't emit outputs if any type errors are present
    "noEmitOnError": true,
    
    // Report errors for unused locals
    "noUnusedLocals": true,
    
    // Report errors for unused parameters
    "noUnusedParameters": true,
    
    // Base URL for path mapping
    "baseUrl": ".",
    
    // Path mapping for clean imports
    "paths": {
      "@/*": ["./*"],
      "@routes/*": ["./routes/*"],
      "@services/*": ["./services/*"],
      "@middleware/*": ["./middleware/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"]
    }
  },
  
  // Files to include in compilation
  "include": [
    "./types/express.d.ts",
    "**/*.ts"
  ],
  
  // Files to exclude from compilation
  "exclude": [
    "node_modules",
    "dist-server"
  ]
}
