{
  // TypeScript configuration for Electron main process
  // This extends the root tsconfig.json but with Node-specific settings
  
  "extends": "../tsconfig.json",
  "compilerOptions": {
    // Output directory for compiled JavaScript
    "outDir": "../dist-electron",
    
    // Use ES2022 for ES module and import.meta support
    "module": "ES2022",
    
    // Target modern Node.js (Electron uses recent Node versions)
    "target": "ES2022",
    
    // Enable all strict type-checking options
    "strict": true,
    
    // Allow default imports from modules with no default export
    "esModuleInterop": true,
    
    // Skip type checking of declaration files for faster compilation
    "skipLibCheck": true,
    
    // Ensure consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    
    // Allow importing JSON files
    "resolveJsonModule": true,
    
    // Enable decorators (if you use them)
    "experimentalDecorators": true,
    
    // Module resolution strategy
    "moduleResolution": "node",
    
    // Include type definitions for Node.js
    "types": ["node"],
    
    // Source map generation for debugging
    "sourceMap": true,
    
    // Don't emit outputs if any type errors are present
    "noEmitOnError": true,
    
    // Disallow unused local variables
    "noUnusedLocals": true,
    
    // Disallow unused parameters
    "noUnusedParameters": true,
    
    // Enable strict null checks
    "strictNullChecks": true,
    
    // Enable strict function types
    "strictFunctionTypes": true
  },
  
  // Files to include in compilation
  "include": [
    "**/*.ts"
  ],
  
  // Files to exclude from compilation
  "exclude": [
    "node_modules",
    "dist-electron"
  ]
}